@using MVCDemo.Infrastructure;
@{
    ViewBag.Title = "Rehearsals (Ng)";
}
@if ((Model != null) && !string.IsNullOrWhiteSpace(Model.JsonToken))
{
    <div id="at-jtk1" data-tk='@Html.Raw(Model.JsonToken)' class="hidden"></div>
}

<h2>Rehearsals (Ng)</h2>
